<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="archiveWsConfig" class="uk.ac.ebi.pride.archive.wsclient.config.ArchiveWsConfig">
        <property name="protocol" value="${ws.protocol}"/>
        <property name="hostName" value="${ws.host.name}"/>
    </bean>

    <!--load property files-->
    <context:property-placeholder location="classpath:prop/archive-ws-config.properties" ignore-unresolvable="true" order="1"/>

</beans>